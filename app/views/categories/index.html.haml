.categories.index-page
	.card
		.card-body
			%h1 Lista de Categorías
			%table.table
				%thead
					%tr
						%th Nombre
						%th Descripción
						%th
						%th
						%th
				%tbody
					- @categories.each do |category|
						%tr
							%td= category.name
							%td= category.description
							%td= link_to t('common.show'), category
							%td= link_to t('common.edit'), edit_category_path(category)
							%td= link_to t('common.destroy'), category, :method => :delete, :data => { :confirm => t('common.are_you_sure') }
					%br
					.text-right
						= link_to 'Nueva Categoría', new_category_path, :style=> 'background-color:#634EB7; color: #FFFFFF', class: 'btn'